extends layout

block content
    a(href='/crud/problems/' + problem.id)= 'back'
    h1= problem.name
    form(name='edit-problem', method='post', action='/crud/problems/' + problem.id + '/update')
        div
            span Title
            input(type='text', name='title', value=problem.title)
        div
            span Category
            select(name='category_id')
                each category in categories
                    if category.id == problem.category_id
                        option(value=category.id, selected)=category.name
                    else
                        option(value=category.id)=category.name
        div
            span Description
            textarea(name='description')=problem.description
        div
            input(type='submit', value='submit')
